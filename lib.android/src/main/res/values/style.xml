<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="txtGuide">
        <item name="android:textColor">#111111</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#dfbf31</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="activity_translate_style" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_translate_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_translate_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_translate_close_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_translate_close_out</item>
    </style>
</resources>